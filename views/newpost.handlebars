                            <div class="row px-2">
                                <input class="text-area" type="text" id="post-title" name="post-title" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Content">Content</label>
                            <div class="row px-2">
                                <input class="text-area" id="post-content" name="post-content" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btnWidth">Create</button>
