<div class="row p-2">
    <div class="col-12">
        <a href="/dashboard"> &larr; Back to dashboard</a>
        <div class="border mb-2">
            <div class="col-12 bg-primary">
                <div class="text-light p-1 pt-3">
                    <h4>Edit Post</h4>
                </div>
            </div>
            <form class="col-12 edit-post-form delete-post-form">
                <div class="px-5 py-3 edit-post-form">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <div class="row px-2">
                            <input class="text-area" type="text" id="post-title" name="post-title"
                                value="{{post.title}}" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Content">Content</label>
                        <div class="row px-2">
                            <input class="text-area" id="post-content" name="post-content" value="{{post.content}}" />
                        </div>
                    </div>

                    <div class="row px-2">
                        <p class="card-text">-{{post.user.username}} on {{format_date post.created_at}}</p>
                    </div>
                    </br>
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
                        post.comments.length}}</a>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" type="button" class="btn btn-primary btnWidth my-2">
                            Update Post
                        </button>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-12 mb-2">
                        <button type="button" class="delete-post-btn btn btn-primary btnWidth my-2">
                            Delete
                        </button>
                    </div>
                </div>
            </form>


        </div>
        <div class="border mb-2">
            <div class="col-12 bg-primary">
                <div class="text-light p-1 pt-3">
                    <h4>Add Comment</h4>
                </div>
            </div>
            <form class="comment-form col-12">
                <div class="row">
                    <div class="col-12 my-4">
                        <input class="text-area" id="post-comment" name="post-comment" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 my-4">
                        <button type="button" class="add-comment-btn btn btn-primary btnWidth">
                            Add Comment
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="border mb-2">
            <div class="col-12 bg-primary">
                <div class="text-light p-1 pt-3">
                    <h4>Comments</h4>
                </div>
            </div>
            {{> comments post.comments}}
        </div>

    </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>